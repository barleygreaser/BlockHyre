{
    "name": "blockhyre-monorepo",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "prettier": "^3.4.2",
        "turbo": "^2.3.3"
    },
    "packageManager": "pnpm@9.15.2",
    "dependencies": {
        "@radix-ui/react-dialog": "^1.1.15"
    },
    "pnpm": {
        "overrides": {
            "react": "19.1.0",
            "react-dom": "19.1.0",
            "react-native": "0.81.5"
        }
    }
}